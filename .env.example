# Anthropic API Key — required for production (SDK backend)
# In development, Claude CLI is used instead (no key needed)
# Get yours at https://console.anthropic.com/
ANTHROPIC_API_KEY=your_api_key_here

# Server port (optional, defaults to 3001)
PORT=3001

# Supabase (optional — without these, app falls back to localStorage)
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Supabase client-side (VITE_ prefix exposes to browser — use anon key only)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key_here

# Sentry error tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id

# PostHog product analytics (optional)
VITE_POSTHOG_KEY=phc_your_posthog_key
VITE_POSTHOG_HOST=https://us.i.posthog.com
